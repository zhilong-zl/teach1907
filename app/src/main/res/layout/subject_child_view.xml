<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10">

    <com.teach.teach1907.view.design.RoundImage
        android:id="@+id/left_round_image"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@drawable/default_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_13"
        app:layout_constraintBottom_toBottomOf="@+id/left_round_image"
        app:layout_constraintLeft_toRightOf="@+id/left_round_image"
        app:layout_constraintTop_toTopOf="@+id/left_round_image" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="@+id/left_round_image"
        app:layout_constraintTop_toBottomOf="@+id/left_round_image" />
</androidx.constraintlayout.widget.ConstraintLayout>